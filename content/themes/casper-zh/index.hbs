{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<link rel="stylesheet" href="{{asset "css/supersized.css"}}"/>


<header class="main-header">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">菜单</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">下拉显示</span></a>
</header>
<script src="http://7xlywd.com1.z0.glb.clouddn.com/supersized.3.2.7.min.js"></script>
<script>
  jQuery(function($){
    $.supersized({
      slide_interval          :   3000,
      transition              :   1,
      transition_speed		:	3000,
      random : 1,
      slide_links				:	'blank',
      slides 					:  	[
        {image : "http://7xnno1.com1.z0.glb.clouddn.com/background-01.jpg"},
        {image : "http://7xnno1.com1.z0.glb.clouddn.com/background-02.jpg"},
        {image : "http://7xnno1.com1.z0.glb.clouddn.com/background-03.jpg"},
        {image : "http://7xnno1.com1.z0.glb.clouddn.com/background-04.jpg"},
        {image : "http://7xnno1.com1.z0.glb.clouddn.com/background-05.jpg"}
      ]
    });
  });
</script>
{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
